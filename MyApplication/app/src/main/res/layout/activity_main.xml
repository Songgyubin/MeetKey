<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/f"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/my_toolbar"
        android:background="@drawable/gradient_main"
        android:gravity="center_horizontal"
        app:title="MeetKey"
        app:titleTextColor="#ffffff"
        app:titleMarginStart="120dp"
        >
    </androidx.appcompat.widget.Toolbar>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_main"
        android:id="@+id/main_content_layout"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/SongAlpha1"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="회의 중"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:background="@drawable/main_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="#7de2fc"
                android:layout_gravity="center"
                android:text="1"
                android:gravity="center"
                android:textSize="45dp"
                android:textStyle="bold"
                android:background="@drawable/main_content"
                android:id="@+id/num_of_conference"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:background="@drawable/main_content"
                android:text="회의 참가"
                android:textSize="22dp"
                android:textStyle="bold"
                android:id="@+id/main_join_meeting"
                android:onClick="onClick"
                />
        </LinearLayout>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/gradient_main"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/main_content"
                android:text="친구 추가"
                android:textColor="#ffffff"
                android:id="@+id/main_add_friend"
                android:onClick="onClick"
                android:textSize="20dp"
                android:drawableStart="@drawable/friend35"
                android:drawableEnd="@drawable/plus35"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#00ffffff"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_content"
                android:text="회의 시작"
                android:id="@+id/main_start_meeting"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:drawableEnd="@drawable/go_conference35"
                android:drawableStart="@drawable/conference35"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/viewPager"
            android:layout_weight="1"
            android:background="#f0f0f0"
            >
        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/tabLayout"
            app:tabIndicatorHeight="4dp"
            android:layout_alignParentTop="true"
            app:tabIndicatorColor="#7de2fc"
            app:tabSelectedTextColor="#228f7f"
            app:tabTextAppearance="@style/TabText"
            app:tabTextColor="#2a3f54"
            >
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
</LinearLayout>

    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>

