<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_main"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:elevation="4dp"
            android:background="#00ffffff"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back35"
                android:background="#00ffffff"
                android:id="@+id/make_groups_gohome"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MeetKey"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_marginStart="130dp"
                />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/layout_shape"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 추가"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_shape3"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:background="@drawable/layout_shape2"
        android:layout_gravity="center_horizontal"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            style="@style/SongTextInput"
            app:boxStrokeColor="#43d2e8"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/text_input_layout1"
            app:hintTextAppearance="@style/myHintStyle"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="그룹 이름을 입력해주세요"
                android:id="@+id/groupname"
                android:inputType="text"
                style="@style/SongTextInput"
                android:imeOptions="actionSearch"
                android:textSize="15dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <ListView
            android:id="@+id/makeGroup_friends"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:choiceMode="multipleChoice"
            android:layout_marginTop="20dp"
            android:dividerHeight="10dp"
            android:divider="#f0f0f0"
            >
        </ListView>
    </LinearLayout>
    <Button
        android:id="@+id/addgroup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:text="추가"
        android:textColor="#ffffff" />
</LinearLayout>