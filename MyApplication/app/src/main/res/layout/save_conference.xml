<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_main"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:elevation="4dp"
            android:background="#00ffffff"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back35"
                android:background="#00ffffff"
                android:id="@+id/c_gohome"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MeetKey"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_marginStart="130dp"
                />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/layout_shape"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회의 종료"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_shape3"
            >

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:background="@drawable/layout_shape2"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/save_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인공지능 회의 분석 서비스"
            android:textSize="18dp"
            android:textColor="#111111"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-05"
            android:textSize="18dp"
            android:textColor="#959595"
            android:layout_marginStart="15dp"
            />
    <TextView
        android:id="@+id/save_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TOZ"
        android:textColor="#959595"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#959595"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/num_cluster_layout"
            style="@style/SongTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:boxStrokeColor="#43d2e8"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/myHintStyle"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_cluster"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="주제 개수를 입력해주세요"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/camera_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape2"
            android:onClick="onClick"
            android:text="사진 업로드"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="#ffffff" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="저장"
        android:textColor="#000000" />
</LinearLayout>
